<h1>Edit Category</h1>

<%=  form_for [:admin, @category] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :data => {disable_with: "Submitting..."}, :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_categories_path %>
  </div>

<% end %>
