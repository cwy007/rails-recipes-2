<h1><%= t("category_list", :scope => "admin" ) %></h1>

<p class="pull-right">
  <%= link_to("New Category", new_admin_category_path, class: "btn btn-primary") %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to(category.name, admin_category_path(category)) %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-default btn-sm" %>
          <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
